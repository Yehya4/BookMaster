<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookmaster.controllers.LoansController" style="-fx-background-color: #f5f7fa;">

    <top>
        <VBox spacing="0">

            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
                <Button text="← Retour" onAction="#handleDashboard" styleClass="button-secondary"/>
                <Label text="Gestion des Emprunts" styleClass="header-title"/>
            </HBox>


            <VBox styleClass="form-container" style="-fx-margin: 20px; -fx-padding: 20px;">
                <Label text="Nouvel Emprunt" styleClass="section-title"/>
                
                <FlowPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Livre"/>
                        <ComboBox fx:id="bookCombo" promptText="Sélectionner un livre" prefWidth="250"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Membre"/>
                        <ComboBox fx:id="memberCombo" promptText="Sélectionner un membre" prefWidth="250"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Durée (jours)"/>
                        <TextField fx:id="daysField" text="14" prefWidth="100"/>
                    </VBox>
                </FlowPane>

                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20px 0 0 0;">
                    <Button text="Emprunter" onAction="#handleBorrow" styleClass="button"/>
                    <Button text="Retourner le livre" onAction="#handleReturn" styleClass="button"/>
                    <Button text="Supprimer l'emprunt" onAction="#handleDelete" styleClass="button, button-danger"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 20px 20px 20px;" spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                 <Button text="Actualiser" onAction="#handleRefresh" styleClass="button-secondary"/>
                 <CheckBox fx:id="activeOnlyCheckbox" text="Afficher uniquement les emprunts actifs" onAction="#handleRefresh" style="-fx-font-size: 14px;"/>
            </HBox>

            <TableView fx:id="loansTable" VBox.vgrow="ALWAYS" styleClass="compact-table">
                <columns>
                    <TableColumn text="ID" prefWidth="50">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Livre" prefWidth="200">
                        <cellValueFactory><PropertyValueFactory property="bookTitle"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Membre" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="memberName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Date Emprunt" prefWidth="120">
                        <cellValueFactory><PropertyValueFactory property="loanDate"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Date Retour Prévue" prefWidth="120">
                        <cellValueFactory><PropertyValueFactory property="dueDate"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Date Retour" prefWidth="120">
                        <cellValueFactory><PropertyValueFactory property="returnDate"/></cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>
