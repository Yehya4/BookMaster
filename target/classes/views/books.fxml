<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookmaster.controllers.BooksController" style="-fx-background-color: #f5f7fa;">
    
    <top>
        <VBox spacing="0">

            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
                <Button text="← Retour" onAction="#handleDashboard" styleClass="button-secondary"/>
                <Label text="Gestion des Livres" styleClass="header-title"/>
            </HBox>


            <VBox styleClass="form-container" style="-fx-margin: 20px; -fx-padding: 20px;">
                <Label text="Information du Livre" styleClass="section-title"/>
                
                <FlowPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Titre"/>
                        <TextField fx:id="titleField" promptText="Titre du livre" prefWidth="200"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="ISBN"/>
                        <TextField fx:id="isbnField" promptText="ISBN" prefWidth="150"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Auteur"/>
                        <ComboBox fx:id="authorCombo" promptText="Sélectionner un auteur" prefWidth="180"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Catégorie"/>
                        <ComboBox fx:id="categoryCombo" promptText="Sélectionner une catégorie" prefWidth="180"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Quantité"/>
                        <TextField fx:id="quantityField" promptText="Qté" prefWidth="80"/>
                    </VBox>
                </FlowPane>

                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20px 0 0 0;">
                    <Button text="Ajouter" onAction="#handleAdd" styleClass="button"/>
                    <Button text="Modifier" onAction="#handleUpdate" styleClass="button"/>
                    <Button text="Supprimer" onAction="#handleDelete" styleClass="button, button-danger"/>
                    <Button text="Vider les champs" onAction="#handleClear" styleClass="button-secondary"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 20px 20px 20px;">
            <TableView fx:id="booksTable" VBox.vgrow="ALWAYS" styleClass="compact-table">
                <columns>
                    <TableColumn text="ID" prefWidth="50">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Titre" prefWidth="250">
                        <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="ISBN" prefWidth="120">
                        <cellValueFactory><PropertyValueFactory property="isbn"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Auteur" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="authorName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Catégorie" prefWidth="120">
                        <cellValueFactory><PropertyValueFactory property="categoryName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Qté" prefWidth="60">
                        <cellValueFactory><PropertyValueFactory property="quantity"/></cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>
