<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookmaster.controllers.CategoryController" style="-fx-background-color: #f5f7fa;">

    <top>
        <VBox spacing="0">

            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
                <Button text="← Retour" onAction="#handleDashboard" styleClass="button-secondary"/>
                <Label text="Gestion des Catégories" styleClass="header-title"/>
            </HBox>


            <VBox styleClass="form-container" style="-fx-margin: 20px; -fx-padding: 20px;">
                <Label text="Informations de la Catégorie" styleClass="section-title"/>
                
                <FlowPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Nom de la catégorie"/>
                        <TextField fx:id="nameField" promptText="Nom" prefWidth="250"/>
                    </VBox>
                </FlowPane>

                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20px 0 0 0;">
                    <Button text="Ajouter" onAction="#handleAdd" styleClass="button"/>
                    <Button text="Modifier" onAction="#handleUpdate" styleClass="button"/>
                    <Button text="Supprimer" onAction="#handleDelete" styleClass="button, button-danger"/>
                    <Button text="Vider les champs" onAction="#handleClear" styleClass="button-secondary"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 20px 20px 20px;">
            <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS" styleClass="compact-table">
                <columns>
                    <TableColumn text="ID" prefWidth="50">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nom" prefWidth="300">
                        <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>
