<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookmaster.controllers.LoginController">
    
    <VBox alignment="CENTER" spacing="10" styleClass="form-container" maxWidth="350">
        <Label text="BookMaster" styleClass="label-title"/>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Nom d'utilisateur" />
            <TextField fx:id="usernameField" promptText="" />
        </VBox>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Mot de passe" />
            <PasswordField fx:id="passwordField" promptText="******" />
        </VBox>
        
        <Button text="Se connecter" onAction="#handleLogin" maxWidth="Infinity" styleClass="button"/>
        
        <Label fx:id="errorLabel" textFill="red" visible="false"/>
    </VBox>

</VBox>
